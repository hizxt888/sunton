	"globalStyle": {
		"navigationBarTextStyle": "white",
		"navigationBarBackgroundColor": "#180E36",
		"backgroundColor": "#180E36",
		"navigationStyle":"custom",
		"onReachBottomDistance": 50,
		"enablePullDownRefresh" : false,
		"bounce" : "none",
		"app-plus":{
			"titleNView": false,
			"scrollIndicator": "none",
			"background": "#180E36",
			"bounceBackground": "#180E36",
			"animationType": "slide-in-right"
		}
	},

	"tabBar": {
		"borderStyle": "#0D2F94",
		"backgroundColor": "#0D2F94",
		"color": "#749BDE",
		"selectedColor": "#FFFFFF",
		"list": [
			{
				"pagePath": "pages/index/index",
				"iconPath": "static/images/tabbar/home.png",
				"selectedIconPath": "static/images/tabbar/home1.png",
				"text": ""
			},
			{
				"pagePath": "pages/users/index",
				"iconPath": "static/images/tabbar/my.png",
				"selectedIconPath": "static/images/tabbar/my1.png",
				"text": ""
			}
		]
	}
