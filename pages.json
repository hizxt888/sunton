		{
			"path": "pages/goods/index",
			"style": {
				"enablePullDownRefresh": true
			}
		}, // 商品列表
		{"path": "pages/goods/details"}, // 商品详情
		{"path": "pages/goods/order"}, // 购买创建订单确认页
		{
			"path": "pages/community/promotions",
			"style": {
				"enablePullDownRefresh": true
			}
		}, // 促销活动
		{
			"path": "pages/shares/index"
		}, // shares
		{
			"path": "pages/community/official",
			"style": {
				"enablePullDownRefresh": true
			}
		}, // 官方精选
		{
			"path": "pages/community/fine",
			"style": {
				"enablePullDownRefresh": true
			}
