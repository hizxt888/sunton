		{
			"path": "pages/users/rankingList/rankingList",
			"style": {
				"navigationBarTitleText": "",
				"enablePullDownRefresh": false
			}
		},
		{
			"path" : "pages/users/bindPay/bindPay",
			"style" :{
				"enablePullDownRefresh": false
			}
		},
		{
			"path": "pages/users/personal/index",
			"style": {
				"enablePullDownRefresh": false
			}
		},
		{
			"path": "pages/users/teamDetail/teamDetail",
			"style": {
				"enablePullDownRefresh": false
			}
		},
		{
			"path": "pages/users/switchLanguage/switchLanguage",
			"style": {
				"enablePullDownRefresh": false
			}
		},
		{
			"path": "pages/users/wallet/mybill",
			"style": {
				"enablePullDownRefresh": true
			}
